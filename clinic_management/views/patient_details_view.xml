<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sequence_patient" model="ir.sequence">
        <field name="name">Patient Sequence</field>
        <field name="code">patient.details</field>
        <field name="prefix">P</field>
        <field name="padding">5</field>
        <field name="company_id" eval="False"/>
    </record>

    <record id="patient_details_action" model="ir.actions.act_window">
        <field name="name">Patient Details</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">patient.details</field>
        <field name="view_mode">tree,form,kanban,graph</field>
        <field name="context">{}</field>
    </record>

    <record id="patient_details_tree" model="ir.ui.view">
        <field name="name">patient.details.tree</field>
        <field name="model">patient.details</field>
        <field name="arch" type="xml">
            <tree>
                <field name="patient_number"/>
                <field name="patient_name"/>
                <field name="patient_address"/>
                <field name="patient_dob"/>
                <field name="patient_age"/>
            </tree>
        </field>
    </record>

    <record id="patient_details_form" model="ir.ui.view">
        <field name="name">patient.details.form</field>
        <field name="model">patient.details</field>
        <field name="arch" type="xml">

            <form>
                <header>
                     <button name="create_patient" string="Create User"
                            type="object" class="oe_highlight"/>
                </header>
                <sheet>

                    <!---             Smart button create                     -->

                    <div class="oe_button_box" name="button_box">
                        <button name="total_count" class="oe_stat_button" type="object" icon="fa-pencil-square-o">
                            <div class="o_stat_info">
                                <field name="total_opd" class="o_stat_value"/>
                                <span class="o_stat_text">Total OPD</span>
                            </div>
                        </button>
                    </div>

                    <div>
                        <h1>
                            <field name="patient_number"/>
                        </h1>
                    </div>
                    <group>
                        <group name="patient_details" string="Patient Details">
                            <field name="user_id"/>
                            <field name="patient_name"/>
                            <field name="patient_address"/>
                            <field name="patient_email"/>
                            <field name="patient_dob"/>
                            <field name="patient_age"/>
                            <button name="%(doctor_wizard_action)d" type="action"
                                    string="Create OPD" class="oe_highlight"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <menuitem id="clinic_menu_root"
              name="Clinic"/>

    <menuitem id="patient_menu"
              name="Patient"
              groups="group_clinic_admin,group_clinic_patient_details"
              parent="clinic_menu_root"/>

    <menuitem id="patient_details_menu"
              name="Patient Details"
              parent="patient_menu"
              action="patient_details_action"/>
</odoo>