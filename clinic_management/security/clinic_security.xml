<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="module_category_clinic" model="ir.module.category">
        <field name="name">clinic Management</field>
    </record>

    <record id="group_clinic_admin" model="res.groups">
        <field name="name">admin</field>
        <field name="category_id" ref="module_category_clinic"/>
    </record>

     <record id="group_clinic_patient_details" model="res.groups">
        <field name="name">Patient</field>
        <field name="category_id" ref="module_category_clinic"/>
    </record>

    <record model="ir.rule" id="patient_record_rule">
        <field name="name">patient details</field>
        <field ref="model_patient_details" name="model_id"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_clinic_patient_details'))]"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_unlink" eval="0"/>
        <field name="perm_read" eval="1"/>
    </record>

    <record id="group_clinic_doctor_details" model="res.groups">
        <field name="name">Doctor</field>
        <field name="category_id" ref="module_category_clinic"/>
    </record>

    <record model="ir.rule" id="doctor_record_rule">
        <field name="name">doctor details</field>
        <field ref="model_doctor_details" name="model_id"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_clinic_doctor_details'))]"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_unlink" eval="0"/>
        <field name="perm_read" eval="1"/>
    </record>

</odoo>
